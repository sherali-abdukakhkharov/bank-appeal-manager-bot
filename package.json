{
  "name": "bank-appeal-manager-bot",
  "version": "1.0.0",
  "description": "Manages appeals from citizens or organizations that was sent to bank",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate:make": "knex migrate:make --knexfile src/database/knexfile.ts -x ts",
    "migrate:latest": "knex migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/database/knexfile.ts",
    "seed:make": "knex seed:make --knexfile src/database/knexfile.ts -x ts",
    "seed:run": "knex seed:run --knexfile src/database/knexfile.ts",
    "db:clear": "npx tsx src/database/scripts/clear-db.ts",
    "db:setup": "npm run migrate:latest && npm run seed:run",
    "db:reset": "npm run db:clear && npm run db:setup"
  },
  "dependencies": {
    "@grammyjs/hydrate": "^1.4.1",
    "@grammyjs/storage-free": "^2.5.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "axios": "^1.12.1",
    "bson-objectid": "^2.0.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dayjs": "^1.11.18",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "exceljs": "^4.4.0",
    "grammy": "^1.10.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.17.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^17.0.8",
    "concurrently": "^9.2.1",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
